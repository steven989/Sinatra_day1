<div class="body">

    <div id="contacts">
    
        <h1>Here are all your contacts:</h1> 
        <% @@contact_array.each { |contact| %>
            <div class="individual_contact">
                <% id = contact.id %>
                <% name = contact.first_name+" "+contact.last_name %>
                <% email =contact.email %>
                <% notes = contact.notes %>
                <h1><%= name %></h1> <br>
                <p><%= email %> </p> <br>
                <p><%= notes %> </p>
            <div class="modify">
                <form action="/contacts/:<%= id %>/edit" method="GET">
                    <input type="submit" name="submit" class="modify_delete" value="Modify contact">
                </form>
            </div>
            <div class="delete">
                <form action="/contacts/:<%= id %>/delete" method="GET">
                    <input type="submit" name="submit" class="modify_delete" value="Delete contact">
                </form>
            </div>
